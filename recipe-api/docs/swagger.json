{
    "openapi": "3.0.2",
    "info": {
        "title": "recipes-API",
        "version": "1.0.0",
        "description": "### This is a Swagger UI for our Recipes API"
    },
    "paths": {
        "/recipes": {
            "get": {
                "tags": [
                    "recipes"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "examples": {
                                    "List of recipes": {
                                        "value": [
                                            "Stuffed Peppers",
                                            "Caesar Salad"
                                        ]
                                    }
                                }
                            }
                        },
                        "description": "Returns a list of recipes"
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "examples": {
                                    "Recipe not found": {
                                        "value": "New recipe was not found. "
                                    }
                                }
                            }
                        },
                        "description": "Bad Request"
                    },
                    "404": {
                        "content": {
                            "application/json": {}
                        },
                        "description": "Recipe was not found"
                    }
                },
                "summary": "Get a list of all recipes",
                "description": "Returns a list of all recipes in API"
            },
            "post": {
                "requestBody": {
                    "description": "A new recipe to be created",
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "string"
                            }
                        }
                    },
                    "required": true
                },
                "tags": [
                    "new-recipe"
                ],
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/new-recipe"
                                }
                            }
                        },
                        "description": "New recipe has been created"
                    },
                    "400": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/error"
                                }
                            }
                        },
                        "description": "One or all params are missing."
                    }
                },
                "summary": "Creates a recipe",
                "description": "Creates a new recipe"
            }
        },
        "/recipes/{id}": {
            "get": {
                "tags": [
                    "details"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                },
                                "examples": {
                                    "Full details of a given ": {
                                        "value": {
                                            "id": 1,
                                            "name": "Stuffed Peppers",
                                            "ingredientsAmount": 0,
                                            "howToMake": ""
                                        }
                                    }
                                }
                            }
                        },
                        "description": "Return full details of a given id recipe"
                    },
                    "404": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/error"
                                },
                                "examples": {
                                    "Recipe /w+ was not found": {
                                        "value": "Recipe \\\\w + was not found in game array"
                                    }
                                }
                            }
                        },
                        "description": "Recipe was not found in recipes array"
                    }
                },
                "deprecated": false,
                "operationId": "id",
                "summary": "Get full details of a recipe",
                "description": "Return full details of a given id recipe"
            },
            "delete": {
                "tags": [
                    "delete-recipe"
                ],
                "parameters": [
                    {
                        "name": "id",
                        "schema": {
                            "type": "integer"
                        },
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "204": {
                        "description": "No content was found. "
                    },
                    "404": {
                        "description": "Recipe was not found. "
                    }
                },
                "summary": "Deletes a recipe",
                "description": "Deletes a recipe by id"
            },
            "parameters": [
                {
                    "name": "id",
                    "schema": {
                        "type": "integer"
                    },
                    "in": "path",
                    "required": true
                }
            ]
        }
    },
    "components": {
        "schemas": {
            "error": {
                "title": "Root Type for error",
                "description": "",
                "type": "object",
                "properties": {
                    "error": {
                        "type": "string"
                    }
                },
                "example": {
                    "error": "Error message."
                }
            },
            "new-recipe": {
                "title": "Root Type for new-recipe",
                "description": "",
                "required": [
                    "howToMake",
                    "ingredientsAmount",
                    "name"
                ],
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "ingredientsAmount": {
                        "format": "int32",
                        "type": "integer"
                    },
                    "howToMake": {
                        "type": "string"
                    },
                    "pictureURL": {
                        "type": "string"
                    }
                },
                "example": {
                    "name": "Omlette",
                    "ingredientsAmount": 5,
                    "howToMake": "Whisk eggs and milk. Add Salt and pepper. Put oil to the pan. Pour egg mixture to the pan. When cooked then, turn the omlette around and cook some more. Slide omlette onto plate."
                }
            },
            "delete-recipe": {
                "description": "",
                "required": [
                    "id"
                ],
                "type": "object",
                "properties": {
                    "id": {
                        "description": "",
                        "type": "string"
                    }
                },
                "example": {
                    "id": 1
                }
            }
        }
    }
}