{
  "openapi": "3.0.2",
  "info": {
      "title": "recipe-API",
      "version": "1.0.0",
      "description": "### This is a Swagger UI for our Recipes API"
  },
  "paths": {
      "/recipe": {
          "get": {
              "tags": [
                  "recipes"
              ],
              "responses": {
                  "200": {
                    
                      "content": {
                          "application/json": {
                              "schema": {
                                  "type": "array",
                                  "items": {
                                      "type": "string"
                                  }
                              },
                              "examples": {
                                  "List of recipes": {
                                      "value": [
                                          "Stuffed Peppers",
                                          "Caesar Salad"
                                      ]
                                  }
                              }
                          }
                      },
                      "description": "Return a list of recipes"
                  }
              },
              "summary": "Get a list of all recipes",
              "description": "Returns a list of all recipes in API"
          }
      }
  }
}